<title>儲值時確認</title>
<script language="javascript">
function confirmtopup()
{
if(confirm("確定要儲值嗎?"))
alert("確認儲值！");
else
alert("取消儲值");
}
</script>

</head>
   
<body>
    <!--**************************-->
    <div class="container">    
        <!--~~~~~~~~~~~~~~~~~-->
        <div class="header">           
        </div>        
        
        <!--~~~~~~~~~~~~~~~~~-->        
        <ul id="navigation">        
            <li><a href="javascript:history.back()">上ㄧ頁</a></li> 
        </ul>
        
        <!--~~~~~~~~~~~~~~~~~--> 
        <div class="content">

            <h2>儲值點數</h2>

                <form action = "/topup/add" method = "post">
                    <div class="form">
                                        
                        <span class="name">會員電話: </span>
                        <span class="value"><input type="tel" name="memberphone" required="required"></span>
                        <br/>

                        <span class="name">儲值金額: </span>
                        <span class="value"><input type="number" name="topup" required="required"></span>
                        <br/>

                        <span class="name">儲值點數: </span>
                        <span class="value"><input type="number" name="topuppoints" required="required"></span>
                        <br/>
                        
                        <span class="name"></span>
                        <span class="value"><input type="submit" value="儲值" onclick="confirmtopup()"></span>    
                    </div>
                </form>
              
               
        </div>       
        
        <!--~~~~~~~~~~~~~~~~~--> 
        <div class="footer">
            NTUB imd, 2019.    
        </div>  
    </div>
