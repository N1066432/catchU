        <div class="content">

            <h2>刪除店家資訊</h2> 

            <form action = "/store/remove" method = "post">
                <div class="form">
                    <span class="name">店家編號: </span>
                    <span class="value"><input type="text" name="storeID" ></span>
                    <br/>
                                                    
                    <span class="name"></span>
                    <span class="value"><input type="submit" value="刪除" onclick="confirmdelete()"></span>    
                </div>    
            </form>   
              
               
