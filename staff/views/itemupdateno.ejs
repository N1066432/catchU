        <div class="content">

            <h2>類別資料更新</h2>

            <form action = "/item/update/form" method = "get">
                <div class="form">
                    <span class="name">類別名稱: </span>
                    <span class="value"><select name="itemID" >
                        <% for(var i=0; i<result.item.length; i++) {%>
                            <option value="<%= result.item[i].itemID %>"><%= result.item[i].itemname %></option>
                        <% } %> 
                    </select>
                    <br/>    
            
                    <span class="name"></span>
                    <span class="value"><input type="submit" value="查詢" ></span>    
                </div>    
            </form> 
              
               
        </div>       
        
