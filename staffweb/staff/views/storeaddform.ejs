        <section class="contact py-5" id="contact">
            <div class="container py-lg-5">
                <h3 class="title-w3ls two text-center">新增店家資訊</h3>
                <div class="col-lg-12 contact_grid_center">

                <form action = "/store/add" method = "post">
                    <div class="form">

                                        
                        <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">店家名稱</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" class="value" name="storename" placeholder="請輸入店家名稱"  required="">
                            </div>
                            <br/>
                        <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">店家地址</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" class="value" name="storeaddress" placeholder="請輸入店家地址"  required="">
                            </div>
                            <br/>
                        
                        <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">聯絡電話</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="tel" class="value" name="phoneno" placeholder="請輸入聯絡電話"  required="">
                            </div>
                            <br/>

                        <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">空桌數</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="number" class="value" name="vacanttable" placeholder="請選擇空桌數"  required="">
                            </div>
                            <br/>
    
                        

                         <div class="col-lg-6 contact_grid_left" >
                              <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">營業時間</p>
                              </div>
                             <div class="col-sm-12">
                                <input type="text" class="value" name="businesshours" placeholder="請輸入營業時間"  required="">
                            </div>
                            <br/>
                        
                          <div class="col-lg-6 contact_grid_left" >
                               <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">提供Wi-Fi</p>
                               </div>
                              <div class="col-sm-12">
                                 <input type="text" class="value" name="wifi" placeholder="請輸入是/否"  required="">
                          </div>
                          <br/>
                          <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">提供插座</p>
                            </div>
                           <div class="col-sm-12">
                              <input type="text" class="value" name="socket" placeholder="請輸入是/否"  required="">
                           </div>
                          <br/>
                             <div class="col-lg-6 contact_grid_left" >
                               <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">提供餐點</p>
                               </div>
                           <div class="col-sm-12">
                              <input type="text" class="value" name="providemeals" placeholder="請輸入是/否"  required="">
                          </div>
                          <br/>
                          <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">外食</p>
                               </div>
                           <div class="col-sm-12">
                               <input type="text" class="value" name="outsidefood" placeholder="請輸入是/否"  required="">
                            </div>
                            <br/>
                          <div class="col-lg-6 contact_grid_left" >
                               <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">收費標準</p>
                               </div>
                              <div class="col-sm-12">
                              <input type="text" class="value" name="chargingstandards" placeholder="請輸入收費標準"  required="">
                          </div>
                          <br/>             
                           <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">定價</p>
                            </div>
                           <div class="col-sm-12">
                            <span class="value"><input type="number" name="atime" required="required"> <p font-color="#FFF">小時</p></span> <span class="value"><input type="number" name="apoint" required="required"><p font-color="#FFF">元</p></span>
                          </div>
                           <br/>
                            <div class="col-lg-6 contact_grid_left" >
                              <p class="main_p4 mt-2 mb-2 pt-2 text-md-left mx-auto">超時不足</p>
                             </div>
                             <div class="col-sm-12">
                                <span class="value"><input type="number" name="lessatime" required="required"><p font-color="#FFF">分鐘</p></span> <span class="value"><p font-color="#FFF">加收：</p> <input type="number" name="addapoint" required="required"><p font-color="#FFF">元</p></span>
                             </div>
                          <br/>
                          <span class="name"></span>
                          <div class="col-sm-12">
                              <span class="value"><input type="submit" value="修改"></span>    
                              </div>
                      </div>
