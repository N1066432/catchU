        <section class="contact py-5" id="contact">
            <div class="container py-lg-5">
                <h3 class="title-w3ls two text-center">修改店家資訊</h3>
                <div class="col-lg-12 contact_grid_center">

                <form action = "/store/update" method = "post">
                    <div class="form" align="center" style="vertical-align:middle;">

          <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">店家編號</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" class="value" name="storeID" placeholder="請輸入店家編號" value="<%= item.storeID %>"  required="" readonly>
                            </div>
                            
          <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">店家名稱</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" class="value" name="storename" placeholder="請輸入店家名稱"  value="<%= item.storename %>" required="">
                            </div>
                           
         <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">店家地址</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" class="value" name="storeaddress" placeholder="請輸入店家地址"  value="<%= item.storeaddress %>">
                            </div>

                <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">聯絡電話</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="tel" class="value" name="phoneno" placeholder="請輸入聯絡電話" value="<%= item.phoneno %>">
                            </div>
                       <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">空桌數</p>
                            </div>
                            <div class="col-sm-12">
                                <span class="value"><input type="number" name="vacanttable"  placeholder="請選擇空桌數" value="<%= item.vacanttable %>" required="required"></span>
                            </div>
                        <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">營業時間</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" class="value" name="businesshours" value="<%= item.businesshours %>" placeholder="請輸入營業時間" >
                            </div>

                       <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">提供Wi-Fi</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" class="value" name="wifi" value="<%= item.wifi %>" placeholder="請輸是/否" >
                            </div>
                         <div class="col-lg-6 contact_grid_left" >
                             <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">提供插座</p>
                             </div>
                             <div class="col-sm-12">
                                 <input type="text" class="value" name="socket" value="<%= item.socket %>" placeholder="請輸是/否" >
                             </div>

                         <div class="col-lg-6 contact_grid_left" >
                               <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">提供餐點</p>
                               </div>
                            <div class="col-sm-12">
                                 <input type="text" class="value" name="providemeals" value="<%= item.providemeals %>" placeholder="請輸是/否" >
                            </div>

                        <div class="col-lg-6 contact_grid_left" >
                             <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">外食</p>
                             </div>
                             <div class="col-sm-12">
                                 <input type="text" class="value" name="outsidefood" value="<%= item.outsidefood %>" placeholder="請輸是/否" >
                             </div>

                       <div class="col-lg-6 contact_grid_left" >
                             <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">收費標準</p>
                             </div>
                             <div class="col-sm-12">
                                 <input type="text" class="value" name="chargingstandards" value="<%= item.chargingstandards %>" placeholder="請輸收費標準" >
                             </div>
                       <div class="col-lg-6 contact_grid_left" >
                             <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">定價:</p>
                             </div>
                             <div class="col-sm-12">
                                <span class="value"><input type="number" name="atime"  placeholder="請選擇時數" value="<%= item.atime %>" required="required"> <p font-color="#FFF">小時</p></span> <span class="value"><input type="number" name="apoint" placeholder="請選擇金額" value="<%= item.apoint %>" required="required"> <p font-color="#FFF">元</p></span>
                             </div>
                          <div class="col-lg-6 contact_grid_left" >
                             <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">超時不足:</p>
                             </div>
                             <div class="col-sm-12">
                                <span class="value"><input type="number" name="lessatime"  value="<%= item.lessatime %>" placeholder="請選擇時數" required="required"> <p font-color="#FFF">分鐘</p></span> <span class="value"><p  class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">加收:</p><input type="number" name="addapoint"  value="<%= item.addapoint %>" placeholder="請選擇金額" required="required"><p font-color="#FFF">元</p> </span>
                             </div>

                        <span class="name"></span>
                        <div class="col-sm-12">
                            <span class="value"><input type="submit" value="修改"></span>    
                            </div>
                    </div>
                </form>
              <br/>
              <br/>
               
        </div>       
        
