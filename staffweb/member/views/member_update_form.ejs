            </header>
        <!--~~~~~~~~~~~~~~~~~--> 
        <section class="contact py-5" id="contact">
            <div class="container py-lg-5">
                <h3 class="title-w3ls two text-center">會員資料更新</h3>
                <div class="col-lg-12 contact_grid_center">

                <form action = "/member/update" method = "post">
                    <div class="form" align="center" style="vertical-align:middle;">
                        <div class="col-lg-6 contact_grid_left" >
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">會員帳號(電話號碼)</p>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" class="value" name="memberphone" placeholder="請輸入會員帳號(電話號碼)"  value="<%= item.memberphone %>" required="">
                            </div>
                            <br/>

                            <div class="col-lg-6 contact_grid_left" >
                                <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">會員密碼</p>
                                </div>
                                <div class="col-sm-12">
                                    <input type="text" class="value" name="password" placeholder="請輸入會員密碼" value="<%= item.password %>" required="">
                                </div>
                                <br/>

                            <div class="col-lg-6 contact_grid_left" >
                                <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">會員名稱</p>
                                </div>
                                <div class="col-sm-12">
                                    <input type="text" class="value" name="membername" placeholder="請輸入會員名稱" value="<%= item.membername %>" required="">
                                </div>
                                <br/>
        

                                <div class="col-sm-12">
                                    <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">性別</p>
                                </div>
                                <div class="col-sm-12">
                                    <input type="password" class="value" name="password" placeholder="請輸入男/女/第三性" value="<%= item.gender %>" required="">
                                </div>
                                <div class="col-sm-12">
                                    <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">生日</p>
                                </div>
                                <div class="col-sm-12">
                                    <input type="date" class="value" name="birthday" placeholder="請選擇生日" value="<%= item.birthday %>" required="">
                                </div>
                                <br/>
                                <br/>
                        <span class="name"></span>
                        <div class="col-sm-12">
                        <span class="value"><input type="submit" name="creationdate" value="修改" ></span>    
                    </div>
                </div>
                </form>
              
               
        </div>   
            </div>
        </section>    
        
        <!--~~~~~~~~~~~~~~~~~--> 
