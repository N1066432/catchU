        <!--~~~~~~~~~~~~~~~~~--> 
        <section class="contact" id="contact">
            <div class="banner-w3pvt-info ">
                <div class="overlay-w3ls">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="banner-content text-center">
                                    <h3>餐點資料</h3>
                                   
                                </div>
    
            <script language="javascript">
                function ShowToday(){
                var Today=new Date();
                alert("現在時間是 " + Today.getFullYear()+ " 年 " + (Today.getMonth()+1) + " 月 " + Today.getDate() + " 日 " + Today.getHours() + " 時 " + Today.getMinutes() + " 分 " + Today.getSeconds() + " 秒 ");
                }
            </script>

                <form action = "/orderdetail/add" method = "post">
                    <div class="form" align="center" style="vertical-align:middle;">
                        <% for(var i=0; i<result.length; i++) {%>
                            <% result[i].foodname = result[i].foodname +","+ result[i].foodpoint %>
                        <% } %>

                        
                        <div class="col-lg-6 contact_grid_left">
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto" >餐點名稱</p>
                            </div>
                            
                            <div class="col-sm-12"> 
                            <span class="value">   
                            <select name="foodname" >
                             
                                     
                                <% for(var i=0; i<result.length; i++) {%>
                                    <option value="<%= result[i].foodname %>"><%= result[i].foodname %></option>
                                <% } %> 
                            </div>
                            </select> 
                            </span>
                        </div>
                           
                    
                
                            <div class="col-lg-6 contact_grid_left">
                                <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">數量</p>
                             </div>
                            <div class="col-sm-12">
                                <span class="value"><input type="number" name="foodno"  placeholder="請選擇數量" required=""></span>
                            </div>
                       
                              
                        <div class="col-lg-6 contact_grid_left">
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">桌號</p>
                         </div>
                         <div class="col-sm-12">
                            <span class="value"><input type="number" name="tableno"  placeholder="請輸入桌號" required=""></span>
                        </div>

                        <div class="col-lg-6 contact_grid_left">
                            <p class="main_p4 mt-2 mb-2 pt-2 text-md-middle mx-auto">備註</p>
                         </div>
                         <div class="col-sm-12">
                            <span class="value"><input type="text" name="customized"  placeholder="請填寫備註" required=""></span>
                        </div>


                        <span class="name"></span>
                        <br/>
                        <br/>
                        <div class="col-sm-12">
                        <span class="value"><input type="submit" name="ordtime" value="點餐" ></span>
                    </div>
                    </form>

                    <div class="banner-content text-center">
                        <h3>菜單</h3>
                       
                    </div>

                    <table class="table">
                    <thead>
                        <tr class="table-light" style="text-align:center;">
                            <th width="10%">餐點編號</th>
                            <th width="30%">餐點圖片</th>
                            <th width="40%">餐點名稱,金額</th>
                            <th width="20%">金額</th>
                                               
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<result.length; i++) {%>
                            <tr class="table-light">
                                <td align="center" style="vertical-align:middle;"><%= result[i].foodid %></a></td>
                                <td align="center" style="vertical-align:middle;"><img src="https://catchustaff.herokuapp.com/imgs/<%= result[i].foodimg %>" width="300"></td>
                                <td align="center" style="vertical-align:middle;"><%= result[i].foodname %></td>
                                <td align="center" style="vertical-align:middle;"><%= result[i].foodpoint %></td>                      
                            </tr> 
                        <% } %> 
                    </tbody>
                </table>
  
                    </div>       
                        </div>
                    </div>
                </div>
            </div>
